<Page x:Class="J3DX0H_GUI.WPFClient.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:J3DX0H_GUI.WPFClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid Height="200" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Album Page" Grid.Column="0" Margin="10" Width="200" FontSize="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="6" MouseLeftButtonDown="NavigatePage1" />
            <Label Content="Page 2" Grid.Column="1" Margin="10" Width="200" FontSize="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="6" MouseLeftButtonDown="NavigatePage2"/>
            <Label Content="Page 3" Grid.Column="2" Margin="10" Width="200" FontSize="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="6" MouseLeftButtonDown="NavigatePage3"/>
        </Grid>

    </Grid>
</Page>
